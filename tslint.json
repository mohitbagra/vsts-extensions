{
    "extends": ["tslint-react", "tslint-microsoft-contrib"],
    "rules": {
        "function-name": [
            true,
            {
              "method-regex": "^[a-z][\\w\\d]+$",
              "private-method-regex": "^_[a-z][\\w\\d]+$",
              "protected-method-regex": "^[_]?[a-z][\\w\\d]+$",
              "static-method-regex": "^[a-z][\\w\\d]+$",
              "function-regex": "^[_]?[a-z][\\w\\d]+$"
            }
        ],
        "binary-expression-operand-order": false,
        "no-reserved-keywords": false,
        "no-implicit-dependencies": false,
        "no-submodule-imports": false,
        "type-literal-delimiter": false,
        "adjacent-overload-signatures": true,
		"interface-name": [true],
		"jsx-alignment": true,
        "jsx-curly-spacing": [true, "never"],
        "jsx-equals-spacing": [true, "never"],
        "jsx-no-multiline-js": false,
        "jsx-no-lambda": true,
        "jsx-self-close": true,
        "jsx-wrap-multiline": true,
        "jsx-use-translation-function": false,
        "jsx-no-string-ref": true,
        "react-tsx-curly-spacing": false,
        "react-a11y-event-has-role": false,
        "cyclomatic-complexity": false,
        "max-classes-per-file": [true, 5],
        "react-anchor-blank-noopener": false,
        "react-no-dangerous-html": false,
        "import-name": false,
		"member-ordering": [
            true,
            {
              "order": [
                "public-static-field",
                "public-static-method",
                "protected-static-field",
                "protected-static-method",
                "private-static-field",
                "private-static-method",
                "public-instance-field",
                "protected-instance-field",
                "private-instance-field",
                "public-constructor",
                "protected-constructor",
                "private-constructor",
                "public-instance-method",
                "protected-instance-method",
                "private-instance-method"                
              ]
            }
        ],
		"newline-before-return": false,
		"no-increment-decrement": false,
		"no-object-literal-type-assertion": false,
		"no-parameter-properties": false,
		"quotemark": [true, "double", "avoid-escape"],
        "react-this-binding-issue": [false],
        "align": [
            true,
            "arguments",
            "parameters",
            "statements"
        ],
        "class-name": true,
        "comment-format": [true, "check-space"],
        "eofline": true,
        "indent": [true, "spaces"],
        "jsdoc-format": false,
        "missing-jsdoc": false,
        "linebreak-style": false,
        "max-line-length": [true, 250],
        "new-parens": true,
        "no-angle-bracket-type-assertion": false,
        "no-arg": true,
        "no-bitwise": false,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "no-console": [true,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-any": false,
        "no-internal-module": true,
        "no-import-side-effect": false,
        "prefer-type-cast": false,
        "no-invalid-this": true,
        "no-require-imports": true,
        "no-relative-imports": false,
        "no-shadowed-variable": true,
        "no-string-literal": false,
        "no-string-throw": false,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        "no-unused-variable": [true, "react"],
        "no-use-before-declare": false,
        "no-var-keyword": true,
        "no-var-requires": true,
        "max-func-body-length": false,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "one-variable-per-declaration": [ true ],
        "semicolon": [true, "always"],
        "trailing-comma": [
            false
        ],
        "triple-equals": [true, "allow-null-check"],
        "typedef": [
            true,
            "parameter",
            "property-declaration"
        ],
        "typedef-whitespace": [
            true, 
            {
                "call-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type"
        ],
        "prefer-const": true,
        "ban": [
            true,
            {"name": ["$", "each"], "message": "use for-of loop"}
        ]
    }
}
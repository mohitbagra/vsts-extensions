{
    "manifestVersion": 1,
    "id": "vsts-wit-control-library",
    "version": "1.3.1",
    "name": "Work item form control library",
    "description": "A control library extension for VSTS work item form",
    "publisher": "mohitbagra",
    "icons": {
        "default": "images/logo.png"
    },
    "scopes": [
    	"vso.work",
        "vso.work_write"
	 ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services.Cloud"
        }
    ],
    "tags": [
        "Work Item", 
        "Work Item form", 
        "Work item form custom control"
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/mohitbagra/vsts-extensions"
    },
    "branding": {
        "color": "#106ebe",
        "theme": "dark"
    },    
    "categories": [
        "Plan and track"
    ],
    "contributions": [        
        {
            "id": "plaintext-form-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "A plain text control for work item form.",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Plain text control",
                "uri": "html/plaintextcontrol.html",
                "height": 50,
                "inputs": [
                    {
                        "id":"Text",
                        "name": "Enter text",
                        "description": "Enter text",
                        "inputMode": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"MaxHeight",
                        "name": "Max height",
                        "description": "Maximum height for the control",
                        "validation": {
                            "dataType": "Number",
                            "isRequired": false
                        }
                    }
                ]
            }
        },
        {
            "id": "rating-form-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "A work item form control which shows the integer field value as a star rating control.",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Rating control",
                "uri": "html/ratingcontrol.html",
                "height": 50,
                "inputs": [
                    {
                        "id":"FieldName",
                        "name": "Select field",
                        "description": "Select the integer field for this control",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["Integer"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"MinValue",
                        "name": "Min value (should be greater than 0)",
                        "description": "Enter minimum integer value for the rating",
                        "validation": {
                            "dataType": "Number",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"MaxValue",
                        "name": "Max value",
                        "description": "Enter maximum integer value for the rating",
                        "validation": {
                            "dataType": "Number",
                            "isRequired": true
                        }
                    }
                ]
            }
        },
        {
            "id": "slider-form-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "A work item form control which shows the numeric field value as a slider.",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Slider control",
                "uri": "html/slidercontrol.html",
                "height": 50,
                "inputs": [
                    {
                        "id":"FieldName",
                        "name": "Select field",
                        "description": "Select the numeric field for this control",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["Integer", "Double"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"MinValue",
                        "name": "Min value",
                        "description": "Enter minimum numeric value for the slider",
                        "validation": {
                            "dataType": "Number",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"MaxValue",
                        "name": "Max value",
                        "description": "Enter maximum numeric value for the slider",
                        "validation": {
                            "dataType": "Number",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"StepSize",
                        "name": "Step size",
                        "description": "Enter numeric step size for the slider",
                        "validation": {
                            "dataType": "Number",
                            "isRequired": true
                        }
                    }
                ]
            }
        },
        {
            "id": "pattern-form-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "A work item form control which allows a field value to match certain pattern.",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Pattern control",
                "uri": "html/patterncontrol.html",
                "height": 50,
                "inputs": [
                    {
                        "id":"FieldName",
                        "name": "Select field",
                        "description": "Select the string type field for this control",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["String", "PlainText", "HTML"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"Pattern",
                        "name": "Regex pattern",
                        "description": "Choose pattern for the field's value. A pattern should be a valid javascript regex string",
                        "inputMode": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"ErrorMessage",
                        "name": "Error message",
                        "description": "Enter an error message that would be shown to users if the user entered value doesnt match the pattern.",
                        "inputMode": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    }
                ]
            }
        },
        {
            "id": "multivalue-form-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "A work item form control which allows selection of multiple values.",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "MultiValue control",
                "uri": "html/multivaluecontrol.html",
                "height": 50,
                "inputs": [
                    {
                        "id":"FieldName",
                        "name": "Select field",
                        "description": "Select the string type field for this control",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["String", "PlainText", "HTML"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"Values",
                        "name": "Suggested Values",
                        "description": "Enter suggested values for the control (semicolon separated)",
                        "inputMode": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    }
                ]
            }
        },
        {
            "id": "datetime-form-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "A custom date time control for work item form which lets users choose time as well.",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Date Time control",
                "uri": "html/datetimecontrol.html",
                "height": 50,
                "inputs": [
                    {
                        "id":"FieldName",
                        "name": "Select field",
                        "description": "Select the DateTime field for this control",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["DateTime"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    }
                ]
            }
        }
    ]
}
